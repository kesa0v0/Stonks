############################################
# Stonks .env.dev.example (Local Development)
############################################

# --- Core ---
ENVIRONMENT=development
DEBUG=true
DATABASE_URL=postgresql://devuser:devpass@localhost:5432/dev_db
SECRET_KEY=CHANGE_ME_TO_A_SECURE_RANDOM_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ADMIN_EMAIL=admin@stonks.com
RATE_LIMIT_ENABLED=false

# --- Cache / MQ ---
REDIS_HOST=localhost
REDIS_PORT=6379
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# --- Discord (OAuth + Webhooks + Bot) ---
# OAuth: set in Discord Developer Portal
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
# 기본은 5173, Vite가 5174로 뜨면 해당 포트로 바꾸세요
DISCORD_REDIRECT_URI=http://localhost:5173/auth/discord/callback

# Webhooks for notifications (optional)
DISCORD_ALERTS_WEBHOOK_URL=
DISCORD_HUMAN_WEBHOOK_URL=

# Bot token for slash commands (optional)
DISCORD_BOT_TOKEN=

# Alerts & Scheduling
WHALE_ALERT_THRESHOLD_KRW=10000000
DAILY_REPORT_CRON_KST=0 0 * * *

# --- Observability (ntfy) ---
NTFY_ENABLED=true
NTFY_URL=https://ntfy.sh
NTFY_TOPIC=stonks_dev_errors

# --- Storage (MinIO/S3) ---
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=stonks-backups
BACKUP_RETENTION_DAYS=30
CANDLE_RETENTION_DAYS=90

# --- CORS (개발 시 프런트엔드 오리진 허용) ---
# JSON 배열 문자열 형식으로 지정하세요.
# 5174로 실행 중이면 localhost:5174/127.0.0.1:5174 도 포함하세요.
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173","http://localhost:5174","http://127.0.0.1:5174"]
